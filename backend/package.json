{
	"name": "red-video-backend",
	"version": "0.0.1",
	"description": "htmllessons.io",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"debug": "nest start --debug --watch",
		"prod": "bun ./dist/src/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"db:reset": "prisma db push --force-reset --accept-data-loss",
		"seed:run": "ts-node -r tsconfig-paths/register --transpile-only ./seeder/seeder.ts",
		"db": "bun prisma db push && bun prisma generate && bun seed:run"
	},
	"dependencies": {
		"@faker-js/faker": "^9.0.3",
		"@nestjs-modules/mailer": "^2.0.2",
		"@nestjs/common": "^10.4.1",
		"@nestjs/config": "^3.2.3",
		"@nestjs/core": "^10.4.1",
		"@nestjs/jwt": "^10.2.0",
		"@nestjs/mapped-types": "*",
		"@nestjs/passport": "^10.0.3",
		"@nestjs/platform-express": "^10.4.1",
		"@nestjs/serve-static": "^4.0.2",
		"@nestlab/google-recaptcha": "^3.8.0",
		"@prisma/client": "^5.21.1",
		"@react-email/components": "0.0.24",
		"app-root-path": "^3.1.0",
		"argon2": "^0.41.0",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"cookie-parser": "^1.4.6",
		"fluent-ffmpeg": "^2.1.3",
		"fs-extra": "^11.2.0",
		"helmet": "^7.1.0",
		"lodash": "^4.17.21",
		"nodemailer": "^6.9.14",
		"passport": "^0.7.0",
		"passport-jwt": "^4.0.1",
		"reflect-metadata": "^0.2.2",
		"rimraf": "^6.0.1",
		"rxjs": "^7.8.1"
	},
	"devDependencies": {
		"@nestjs/cli": "^10.4.4",
		"@nestjs/schematics": "^10.1.4",
		"@nestjs/testing": "^10.4.1",
		"@types/app-root-path": "^1.2.8",
		"@types/bcryptjs": "^2.4.6",
		"@types/express": "^4.17.21",
		"@types/fluent-ffmpeg": "^2.1.26",
		"@types/fs-extra": "^11.0.4",
		"@types/jest": "29.5.12",
		"@types/lodash": "^4.17.10",
		"@types/lodash.shuffle": "^4.2.9",
		"@types/multer": "^1.4.12",
		"@types/node": "^22.5.1",
		"@types/passport-jwt": "^4.0.1",
		"@types/supertest": "^6.0.2",
		"@types/uuid": "^10.0.0",
		"@typescript-eslint/eslint-plugin": "^8.3.0",
		"@typescript-eslint/parser": "^8.3.0",
		"eslint": "^9.9.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"jest": "^29.7.0",
		"prettier": "^3.3.3",
		"prettier-plugin-prisma": "^5.0.0",
		"prisma": "^5.21.1",
		"react-email": "^3.0.1",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.5.4"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
