{
	"name": "red-video-backend",
	"version": "0.0.1",
	"description": "htmllessons.io",
	"private": true,
	"license": "UNLICENSED",
	"author": {
		"name": "Kirill Vegele",
		"email": "kirove.work@gmail.com",
		"url": "https://github.com/zxcanton228"
	},
	"engines": {
		"bun": ">=1.2"
	},
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "dotenv -e .env.development -- nest start",
		"start:dev": "dotenv -e .env.development -- nest start --watch",
		"start:prod": "dotenv -e .env.development -- bun run -r ./tsconfig-paths-bootstrap.js ./dist/src/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"seed:dev": "dotenv -e .env.development -- bun run -r ./tsconfig-paths-bootstrap.js ./seeder/seeder",
		"seed:prod": "dotenv -e .env.production -- bun run -r ./tsconfig-paths-bootstrap.js ./dist/seeder/seeder",
		"db:push": "dotenv -e .env.development -- bun prisma db push",
		"db:migrate": "dotenv -e .env.development -- bun prisma migrate dev",
		"db:reset": "prisma db push --force-reset --accept-data-loss"
	},
	"dependencies": {
		"@faker-js/faker": "^9.0.3",
		"@nestjs-modules/mailer": "^2.0.2",
		"@nestjs/common": "^10.4.1",
		"@nestjs/config": "^3.2.3",
		"@nestjs/core": "^10.4.1",
		"@nestjs/jwt": "^10.2.0",
		"@nestjs/mapped-types": "*",
		"@nestjs/passport": "^10.0.3",
		"@nestjs/platform-express": "^10.4.1",
		"@nestjs/schedule": "^6.0.0",
		"@nestjs/serve-static": "^4.0.2",
		"@nestlab/google-recaptcha": "^3.8.0",
		"@prisma/client": "^6.13.0",
		"@react-email/components": "0.0.24",
		"app-root-path": "^3.1.0",
		"argon2": "^0.41.0",
		"chalk": "4.1.2",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.1",
		"compression": "^1.8.1",
		"cookie-parser": "^1.4.6",
		"dotenv-cli": "^10.0.0",
		"fluent-ffmpeg": "^2.1.3",
		"fs-extra": "^11.2.0",
		"helmet": "^7.1.0",
		"lodash": "^4.17.21",
		"nanoid": "^5.1.5",
		"nodemailer": "^6.9.14",
		"passport": "^0.7.0",
		"passport-jwt": "^4.0.1",
		"reflect-metadata": "^0.2.2",
		"rimraf": "^6.0.1",
		"rxjs": "^7.8.1",
		"tsconfig-paths": "^4.2.0"
	},
	"devDependencies": {
		"@nestjs/cli": "^10.4.4",
		"@nestjs/schematics": "^10.1.4",
		"@nestjs/testing": "^10.4.1",
		"@types/app-root-path": "^1.2.8",
		"@types/bcryptjs": "^2.4.6",
		"@types/express": "^4.17.21",
		"@types/fluent-ffmpeg": "^2.1.26",
		"@types/fs-extra": "^11.0.4",
		"@types/jest": "29.5.12",
		"@types/lodash": "^4.17.10",
		"@types/lodash.shuffle": "^4.2.9",
		"@types/multer": "^1.4.12",
		"@types/node": "^22.5.1",
		"@types/passport-jwt": "^4.0.1",
		"@types/supertest": "^6.0.2",
		"@types/uuid": "^10.0.0",
		"@typescript-eslint/eslint-plugin": "^8.3.0",
		"@typescript-eslint/parser": "^8.3.0",
		"eslint": "^9.9.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.2.1",
		"jest": "^29.7.0",
		"prettier": "^3.3.3",
		"prettier-plugin-prisma": "^5.0.0",
		"prisma": "^5.21.1",
		"react-email": "^3.0.1",
		"source-map-support": "^0.5.21",
		"supertest": "^7.0.0",
		"ts-jest": "^29.2.5",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"typescript": "^5.5.4"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
