{
	"trailingComma": "none",
	"tabWidth": 2,
	"useTabs": true,
	"semi": false,
	"singleQuote": true,
	"jsxSingleQuote": true,
	"arrowParens": "avoid",
	"singleAttributePerLine": true,
	"printWidth": 125,
	"proseWrap": "always",
	"bracketSpacing": true,
	"importOrder": [
		"<THIRD_PARTY_MODULES>",
		"^src/components/(.*)$",
		"^src/ui/(.*)$",
		"^src/providers/(.*)$",
		"^src/constants/(.*)$",
		"^src/config/(.*)$",
		"^src/store/(.*)$",
		"^src/hooks/(.*)$",
		"^src/utils/(.*)$",
		"^src/api/(.*)$",
		"^src/server/(.*)$",
		"^(?!.*\\.scss$)(../.*)$",
		"^(?!.*\\.scss$)(./.*)$",
		".*\\.scss$"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,
	"plugins": ["@trivago/prettier-plugin-sort-imports"]
}
